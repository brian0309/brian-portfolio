---
import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';

type Props = CollectionEntry<'blog' | 'project'>['data'];

const { title, description, pubDate, updatedDate, heroImage } = Astro.props;
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
		<style>
			:root {
				--accent-r: 255;
				--accent-g: 0;
				--accent-b: 255;
			}
			main {
				width: 100%;
				max-width: 1200px;
				margin: 0 auto;
				padding: 4rem 1rem;
			}
			.hero-image {
				width: 100%;
			}
			.hero-image img {
				display: block;
				margin: 0 auto;
				border-radius: 12px;
				box-shadow: var(--box-shadow);
			}
			.prose {
				width: 100%;
				max-width: 1200px;
				margin: auto;
				padding: 1.5em;
				color: rgb(var(--gray-dark));
				font-size: clamp(1.05rem, 1.8vw, 1.25rem);
				line-height: 1.8;
			}
			:global(.prose p) {
				margin-bottom: 1.1em;
			}
			:global(.prose h1),
			:global(.prose h2),
			:global(.prose h3),
			:global(.prose h4),
			:global(.prose h5) {
				font-family: var(--font-bit);
				color: rgb(var(--accent-r), var(--accent-g), var(--accent-b));
				letter-spacing: 0.04em;
				margin-top: 1.6em;
				margin-bottom: 0.65em;
				text-shadow: 0 0 8px rgba(var(--accent-r), var(--accent-g), var(--accent-b), 0.25);
			}
			:global(.prose h1) { font-size: clamp(1.8rem, 3.6vw, 2.6rem); }
			:global(.prose h2) { font-size: clamp(1.5rem, 3vw, 2.2rem); }
			:global(.prose h3) { font-size: clamp(1.3rem, 2.4vw, 1.8rem); }
			:global(.prose h4) { font-size: clamp(1.1rem, 2vw, 1.5rem); }
			:global(.prose h5) { font-size: clamp(1rem, 1.6vw, 1.25rem); }
			.title {
				margin-bottom: 1.75em;
				padding: 1.5em 1.25em 1em;
				background: rgba(0, 0, 0, 0.45);
				border: 2px solid rgba(var(--accent-r), var(--accent-g), var(--accent-b), 0.35);
				box-shadow: 0 10px 30px rgba(var(--accent-r), var(--accent-g), var(--accent-b), 0.12);
				border-left: 8px solid rgb(var(--accent-r), var(--accent-g), var(--accent-b));
				line-height: 1.2;
				text-align: left;
			}
			.title .label {
				display: inline-block;
				font-family: var(--font-bit);
				color: rgb(var(--accent-r), var(--accent-g), var(--accent-b));
				font-size: clamp(0.9rem, 1.8vw, 1.1rem);
				letter-spacing: 0.08em;
				margin-bottom: 0.6em;
			}
			.title h1 {
				margin: 0 0 0.4em 0;
				font-family: var(--font-bit);
				font-size: clamp(1.6rem, 3.6vw, 2.4rem);
				letter-spacing: 0.06em;
				color: rgb(var(--accent-r), var(--accent-g), var(--accent-b));
				text-shadow: 0 0 12px rgba(var(--accent-r), var(--accent-g), var(--accent-b), 0.35);
			}
			.date {
				margin-bottom: 0.25em;
				color: #94a3b8;
				font-size: clamp(1rem, 1.6vw, 1.2rem);
			}
			.last-updated-on {
				font-style: italic;
			}
			:global(.prose table) {
				width: 100%;
				border-collapse: collapse;
				margin: 1.5em 0;
				background: rgba(0, 0, 0, 0.8);
				border: 2px solid rgba(var(--accent-r), var(--accent-g), var(--accent-b), 0.5);
				box-shadow: 0 0 20px rgba(var(--accent-r), var(--accent-g), var(--accent-b), 0.3);
			}
			:global(.prose th),
			:global(.prose td) {
				padding: 0.75em 1em;
				border: 1px solid rgba(var(--accent-r), var(--accent-g), var(--accent-b), 0.3);
				text-align: left;
				color: rgb(var(--accent-r), var(--accent-g), var(--accent-b));
				text-shadow: 0 0 8px rgba(var(--accent-r), var(--accent-g), var(--accent-b), 0.6);
			}
			:global(.prose th) {
				background: rgba(var(--accent-r), var(--accent-g), var(--accent-b), 0.1);
				font-weight: bold;
				font-family: var(--font-bit);
				letter-spacing: 0.04em;
			}
			:global(.prose tr:nth-child(even)) {
				background: rgba(var(--accent-r), var(--accent-g), var(--accent-b), 0.05);
			}
			:global(.prose tr:hover) {
				background: rgba(var(--accent-r), var(--accent-g), var(--accent-b), 0.15);
				box-shadow: inset 0 0 10px rgba(var(--accent-r), var(--accent-g), var(--accent-b), 0.2);
			}
			:global(.prose a) {
				color: rgb(var(--accent-r), var(--accent-g), var(--accent-b));
				background: rgba(var(--accent-r), var(--accent-g), var(--accent-b), 0.06);
				padding: 0.06em 0.18em;
				border-radius: 4px;
				text-decoration: none;
				transition: background 0.15s ease, color 0.15s ease;
			}
			:global(.prose a:hover) {
				text-decoration: underline;
				background: rgba(var(--accent-r), var(--accent-g), var(--accent-b), 0.18);
			}
		</style>
	</head>

	<body class="font-terminal relative">
		<div class="scanlines"></div>
		<div class="crt-flicker"></div>
		<Header />
		<main>
			<article>
				<div class="hero-image">
					{heroImage && <Image width={1020} height={510} src={heroImage} alt="" />}
				</div>
				<div class="prose">
					<div class="title">
						<div class="date">
							<FormattedDate date={pubDate} />
						</div>
						<div class="label">&gt;&gt; CONTENT_ENTRY</div>
						<h1>{title}</h1>
						{
							updatedDate && (
								<div class="last-updated-on date">
									Last updated on <FormattedDate date={updatedDate} />
								</div>
							)
						}
						<hr />
					</div>
					<slot />
				</div>
			</article>
		</main>
		<Footer />
		<script>
			const colors = [
				{ r: 0, g: 255, b: 65 },   // cyber-green
				{ r: 255, g: 0, b: 255 }, // cyber-pink
				{ r: 0, g: 255, b: 255 }  // cyber-cyan
			];
			const randomColor = colors[Math.floor(Math.random() * colors.length)];
			document.documentElement.style.setProperty('--accent-r', randomColor.r);
			document.documentElement.style.setProperty('--accent-g', randomColor.g);
			document.documentElement.style.setProperty('--accent-b', randomColor.b);
		</script>
	</body>
</html>
